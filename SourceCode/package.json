{
  "devDependencies": {
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "scripts": {
    "prepare": "husky",
    "lint": "npm run lint --prefix frontend && npm run lint --prefix backend"
